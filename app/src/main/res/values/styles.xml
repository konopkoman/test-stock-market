<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="PageDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/page_divider</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_button</item>
    </style>

    <style name="TickerTextBase" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_default</item>
    </style>

    <style name="TickerTextId" parent="TickerTextBase">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TickerTextLarge">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
